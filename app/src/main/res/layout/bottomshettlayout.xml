<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbkg">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/header_image"
            app:shapeAppearanceOverlay="@style/SpecificCornerRounded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Admin Access Elections"
            android:textColor="@color/primary"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/addElection"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="39dp"
                android:src="@drawable/twotone_playlist_add_24" />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add an Election"
                android:textColor="@color/teal_700"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/removeElection"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:src="@drawable/baseline_playlist_remove_24"
                />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove an Election"
                android:textColor="@color/teal_700"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/modifyElection"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:src="@drawable/baseline_playlist_add_check_24"
            />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give Sub-Admin Access"
            android:textColor="@color/teal_700"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"/>

    </LinearLayout>


</LinearLayout>
